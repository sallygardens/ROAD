<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RecordFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/re_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/top_background">

        <Spinner
            android:id="@+id/top_spiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:entries="@array/spingarr" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/alr_1"
            android:layout_width="wrap_content"
            android:layout_height="81px"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/top_spiner"
            android:layout_toRightOf="@+id/top_spiner"
            android:background="@drawable/editor_top_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48px"
                android:layout_height="54px"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/ed_top_search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/hint_editor_top" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageButton
            android:id="@+id/ib_map"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib_map"
            android:layout_alignLeft="@id/ib_map"
            android:layout_marginLeft="3dp"
            android:text="地图"
            android:textColor="#000000"
            android:textSize="13sp" />


    </com.zhy.autolayout.AutoRelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/re_1"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoRelativeLayout>